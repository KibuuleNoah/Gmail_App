#:import MDTopAppBar kivymd.uix.toolbar.MDTopAppBar

#clickable navigation drawer items
<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#e7e4c0"
    text_color: "#4a4939"
    icon_color: "#757575"
    selected_color: (0,0,0,1)
    _no_ripple_effect: True
    focus_behavior: False
    on_release: app.root.ids.nav_drawer.set_state("close")
    
#navigation drawer text labels
<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "#4a4939"
    icon_color: "#4a4939"
    focus_behavior: False
    selected_color: "#4a4939"
    _no_ripple_effect: True

#Root Screen
MDScreen:
    name: "main"
    MDNavigationLayout:
        MDScreenManager:
            id: screen_manager
            MDScreen:
                name: "first"
               
                #Top App Bar
                TopBar:
                    title:"Inbox"
                    left_action_items: [["menu",lambda x: nav_drawer.set_state("open")]]
                    right_action_items: [["magnify"]]#,lambda x=self.root.current="sec"]]
                    
                ScrollView:
                    pos_hint: {"top":1-0.09}
                    MDList:
                        id: inbox
  
##########################################################$#
                        ThreeLineAvatarIconListItem:
                            text: "Sender"
                            secondary_text: "Email About"
                            tertiary_text: "Email Body...."
                            ImageLeftWidget:
                                source: "/storage/emulated/0/Kivy_GUI_files/MY_pro/Letters/C.png"
     
###########################################################

                #Edit floating button with a pencil
                Floatingbutton:
                
