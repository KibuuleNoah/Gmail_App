###############################################################
#            NAVIGATION DRAWER
###############################################################
        MDNavigationDrawer:
            id: nav_drawer
            #Drawer Menu
            radius:0,0,0,0
            line_color:1,0,0,1
            swipe_edge_width:0
            swipe_distance:500
            MDNavigationDrawerMenu:
                id:nav_
                smooth_scroll_end:30
                #Drawer Header
                MDNavigationDrawerHeader:
                    title: "Noah"
                    text_color:1,1,1,1
